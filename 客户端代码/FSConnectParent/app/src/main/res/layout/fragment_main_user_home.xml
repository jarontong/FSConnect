<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary">

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <com.jaron.fsconnectparent.widget.SolarSystemView
                    android:id="@+id/user_view_solar_system"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"

                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7" />

                <LinearLayout
                    android:id="@+id/rl_show_my_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|top"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_portrait"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@mipmap/widget_default_face"
                            app:civ_border_color="@color/colorWhite"
                            app:civ_border_width="2dip" />
                        <ImageView
                            android:id="@+id/iv_gender"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="end|bottom"
                            android:layout_marginBottom="4dp"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_male" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        tools:text="thanatosx" />

                    <TextView
                        android:id="@+id/truename_text"
                        style="@style/option_item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:textColor="@color/colorWhite"
                        tools:text="thanatosx"
                        />

                </LinearLayout>

            </FrameLayout>

            <View
                style="@style/h_line"
                android:layout_height="1px"
                android:background="@color/list_divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rl_phone"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        style="@style/option_item_rl">

                        <TextView
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="手机"
                             />

                        <TextView
                            android:id="@+id/phone_text"
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_marginEnd="15dp"
                            />

                    </LinearLayout>

                    <View
                        style="@style/h_line"
                        android:layout_height="1px"
                        android:background="@color/list_divider_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rl_student"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        style="@style/option_item_rl">

                        <TextView
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="子女"
                             />

                        <TextView
                            android:id="@+id/student_text"
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_marginEnd="15dp"
                            />

                    </LinearLayout>

                    <View
                        style="@style/h_line"
                        android:layout_height="1px"
                        android:background="@color/list_divider_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rl_username"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        style="@style/option_item_rl">

                        <TextView
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="昵称"
                             />

                        <TextView
                            android:id="@+id/username_text"
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:paddingEnd="10dp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_arrow_right" />
                    </LinearLayout>

                    <View
                        style="@style/h_line"
                        android:layout_height="1px"
                        android:background="@color/list_divider_color" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rl_gender"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        style="@style/option_item_rl">

                        <TextView
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="性别"
                             />

                        <TextView
                            android:id="@+id/gender_text"
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:paddingEnd="10dp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_arrow_right" />
                    </LinearLayout>

                    <View
                        style="@style/h_line"
                        android:layout_height="1px"
                        android:background="@color/list_divider_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        style="@style/option_item_rl">

                        <TextView
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="关联子女"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/student_name_text"
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:paddingEnd="10dp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_arrow_right" />
                    </LinearLayout>

                    <View
                        style="@style/h_line"
                        android:layout_height="1px"
                        android:background="@color/list_divider_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/rl_logout"
                        style="@style/option_item_rl">


                        <TextView
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="退出账号"
                            android:gravity="center"/>

                    </LinearLayout>

                    <View
                        style="@style/h_line"
                        android:layout_height="1px"
                        android:background="@color/list_divider_color" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>